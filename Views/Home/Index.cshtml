@using TreasureL.Helpers
@model TreasureL.Models.Common.PageResult<SanPham>
@{
    ViewData["Title"] = "Home Page";
    List<SanPham> SanPhamNgauNhien = ViewBag.SanPhamNgauNhien;
}

<div>
    <img style="width: 100%; height:100%" src="~/Images/banner_TL.jpg" />
</div>

<div class="headline">
    <h3> Sản phẩm </h3>
</div>

<div class="container mt-3 d-flex justify-content-center">
    <form method="get" action="@Url.Action("Index", "SanPham")">
        <div class="form-group d-flex align-items-center">
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="nhan" value="27" class="form-check-input" />
                <label for="nhan" class="form-check-label">Nhẫn</label>
            </div>
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="daychuyen" value="28" class="form-check-input" />
                <label for="daychuyen" class="form-check-label">Dây chuyền</label>
            </div>
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="khuyen" value="30" class="form-check-input" />
                <label for="khuyen" class="form-check-label">Khuyên tai</label>
            </div>
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="vongtay" value="31" class="form-check-input" />
                <label for="vongtay" class="form-check-label">Vòng tay</label>
            </div>
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="chocker" value="32" class="form-check-input" />
                <label for="chocker" class="form-check-label">Chocker</label>
            </div>
            <div class="form-check mr-5">
                <input type="radio" name="loaiSanPham" id="bongtai" value="34" class="form-check-input" />
                <label for="bongtai" class="form-check-label">Bông tai</label>
            </div>
            <div class="form-check">
                <button type="submit" class="btn btn-dark">Lọc</button>
            </div>
        </div>
    </form>
</div>




<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model.Items) 
        {
            <div class="col-12 col-sm-6 col-md-4 p-2">
                <div class="card d-flex flex-column text-center border height100">
                    <div class="single-image">
                        <img src="~/@item.HinhSp" class="card-img-top" alt="...">
                        <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.MaSp" class="btn-order">Xem Ngay</a>
                    </div>
                    <div class="product-info">
                        <div class="product-name" asp-route-id="@item.MaSp"><h5>@item.TenSp</h5></div>
                        <div class="product-price">@Html.FormatPrice(@item.DonGia) VNĐ</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@* ---------------- Page ---------------------*@
<nav aria-label="Page navigation example mt-2">
    <ul class="pagination" style="justify-content:center">
        <li class="page-item"><a class="page-link " asp-action="Index" asp-route-page="1">&#8249; </a></li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item"><a class="page-link " asp-action="Index" asp-route-page="@i">@i</a></li>

        }
        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.PageCount">&#8250;</a></li>
    </ul>
</nav>

